<?xml version="1.0"?>

<config>
    <modules>
        <Signifyd_Connect>
            <version>4.5.2</version>
        </Signifyd_Connect>
    </modules>
    <global>
        <models>
            <paygate>
                <rewrite>
                    <authorizenet>Signifyd_Connect_Model_Authnet</authorizenet>
                </rewrite>
            </paygate>
            <paypal>
                <rewrite>
                    <payflowlink>Signifyd_Connect_Model_Payflowlink</payflowlink>
                    <payflowadvanced>Signifyd_Connect_Model_Payflowadvanced</payflowadvanced>
                    <payflowpro>Signifyd_Connect_Model_Payflowpro</payflowpro>
                </rewrite>
            </paypal>
            <sales>
                <rewrite>
                    <order_payment>Signifyd_Connect_Model_Order_Payment</order_payment>
                    <order>Signifyd_Connect_Model_Order_Order</order>
                </rewrite>
            </sales>
            <signifyd_connect>
                <class>Signifyd_Connect_Model</class>
                <resourceModel>signifyd_connect_resource</resourceModel>
            </signifyd_connect>
            <signifyd_connect_resource>
                <class>Signifyd_Connect_Model_Resource</class>
                <entities>
                    <case>
                        <table>signifyd_connect_case</table>
                    </case>
                    <fulfillment>
                        <table>signifyd_connect_fulfillment</table>
                    </fulfillment>
                    <retries>
                        <table>signifyd_connect_retries</table>
                    </retries>
                </entities>
            </signifyd_connect_resource>
        </models>
        <resources>
            <signifyd_connect_setup>
                <setup>
                    <module>Signifyd_Connect</module>
                    <class>Signifyd_Connect_Model_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </signifyd_connect_setup>
            <signifyd_connect_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </signifyd_connect_write>
            <signifyd_connect_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </signifyd_connect_read>
        </resources>
        <helpers>
            <signifyd_connect>
                <class>Signifyd_Connect_Helper</class>
            </signifyd_connect>
        </helpers>
        <blocks>
            <signifyd_connect>
                <class>Signifyd_Connect_Block</class>
            </signifyd_connect>

            <adminhtml>
                <rewrite>
                    <sales_order_view>Signifyd_Connect_Block_Sales_Order_View</sales_order_view>
                    <sales_order_view_tab_info>Signifyd_Connect_Block_Sales_Order_View_Tab_Info</sales_order_view_tab_info>
                </rewrite>
            </adminhtml>
        </blocks>
        <events>
            <checkout_submit_all_after>
                <observers>
                    <signifyd_connect>
                        <class>signifyd_connect/observer</class>
                        <method>openCase</method>
                    </signifyd_connect>
                </observers>
            </checkout_submit_all_after>
            <sales_order_save_commit_after>
                <observers>
                    <signifyd_connect>
                        <class>signifyd_connect/observer</class>
                        <method>openCase</method>
                    </signifyd_connect>
                </observers>
            </sales_order_save_commit_after>

            <!-- Order update events to check and trigger Signifyd update if it is the case -->
            <sales_order_address_save_commit_after>
                <observers>
                    <signifyd_connect>
                        <class>signifyd_connect/observer</class>
                        <method>updateCaseAddressSave</method>
                    </signifyd_connect>
                </observers>
            </sales_order_address_save_commit_after>
            <sales_order_payment_save_commit_after>
                <observers>
                    <signifyd_connect>
                        <class>signifyd_connect/observer</class>
                        <method>updateCasePaymentSave</method>
                    </signifyd_connect>
                </observers>
            </sales_order_payment_save_commit_after>

            <!-- Payment methods that need to delay order on hold status -->
            <controller_action_predispatch_paypal_payflow_returnUrl>
                <observers>
                    <signifyd_connect>
                        <class>signifyd_connect/observer</class>
                        <method>saveLastIncrementId</method>
                    </signifyd_connect>
                </observers>
            </controller_action_predispatch_paypal_payflow_returnUrl>
            <controller_action_postdispatch_paypal_payflow_returnUrl>
                <observers>
                    <signifyd_connect>
                        <class>signifyd_connect/observer</class>
                        <method>putOrderOnHoldAsync</method>
                    </signifyd_connect>
                </observers>
            </controller_action_postdispatch_paypal_payflow_returnUrl>
            <controller_action_predispatch_paypal_payflowadvanced_returnUrl>
                <observers>
                    <signifyd_connect>
                        <class>signifyd_connect/observer</class>
                        <method>saveLastIncrementId</method>
                    </signifyd_connect>
                </observers>
            </controller_action_predispatch_paypal_payflowadvanced_returnUrl>
            <controller_action_postdispatch_paypal_payflowadvanced_returnUrl>
                <observers>
                    <signifyd_connect>
                        <class>signifyd_connect/observer</class>
                        <method>putOrderOnHoldAsync</method>
                    </signifyd_connect>
                </observers>
            </controller_action_postdispatch_paypal_payflowadvanced_returnUrl>
            <controller_action_postdispatch_paypal_express_placeOrder>
                <observers>
                    <signifyd_connect>
                        <class>signifyd_connect/observer</class>
                        <method>putOrderOnHoldAsync</method>
                    </signifyd_connect>
                </observers>
            </controller_action_postdispatch_paypal_express_placeOrder>

            <!-- Events for guarantee cancellation -->
            <sales_order_creditmemo_refund>
                <observers>
                    <signifyd_connect>
                        <model>signifyd_connect/observer</model>
                        <method>salesOrderCreditmemoRefund</method>
                    </signifyd_connect>
                </observers>
            </sales_order_creditmemo_refund>
            <sales_order_payment_cancel>
                <observers>
                    <signifyd_connect>
                        <model>signifyd_connect/observer</model>
                        <method>salesOrderPaymentCancel</method>
                    </signifyd_connect>
                </observers>
            </sales_order_payment_cancel>
            <order_cancel_after>
                <observers>
                    <signifyd_connect>
                        <model>signifyd_connect/observer</model>
                        <method>salesOrderCancel</method>
                    </signifyd_connect>
                </observers>
            </order_cancel_after>
        </events>
    </global>
    <crontab>
        <jobs>
            <signifyd_retry>
                <schedule>
                    <cron_expr>*/1 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>signifyd_connect/cron::retry</model>
                </run>
            </signifyd_retry>
        </jobs>
    </crontab>
    <frontend>
        <layout>
            <updates>
                <signifyd_connect>
                    <file>signifyd/connect.xml</file>
                </signifyd_connect>
            </updates>
        </layout>
        <routers>
            <signifyd_connect>
                <use>standard</use>
                <args>
                    <module>Signifyd_Connect</module>
                    <frontName>signifyd</frontName>
                </args>
            </signifyd_connect>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <signifyd_connect before="Mage_Adminhtml">Signifyd_Connect_Adminhtml</signifyd_connect>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <signifyd_connect>
                                            <title>Signifyd</title>
                                            <sort_order>9999</sort_order>
                                        </signifyd_connect>
                                    </children>
                                </config>
                            </children>
                        </system>
                        <sales>
                            <children>
                                <signifyd_connect>
                                    <sort_order>50</sort_order>
                                    <title>Signifyd Scores</title>
                                </signifyd_connect>
                            </children>
                        </sales>
                    </children>
                </admin>
            </resources>
        </acl>
        <events>
            <eav_collection_abstract_load_before>
                <observers>
                    <signifyd_connect>
                        <model>signifyd_connect/observer</model>
                        <method>coreCollectionAbstractLoadBefore</method>
                    </signifyd_connect>
                </observers>
            </eav_collection_abstract_load_before>
            <core_collection_abstract_load_before>
                <observers>
                    <signifyd_connect>
                        <model>signifyd_connect/observer</model>
                        <method>coreCollectionAbstractLoadBefore</method>
                    </signifyd_connect>
                </observers>
            </core_collection_abstract_load_before>
            <sales_order_grid_collection_load_before>
                <observers>
                    <signifyd_connect>
                        <model>signifyd_connect/observer</model>
                        <method>salesOrderGridCollectionLoadBefore</method>
                    </signifyd_connect>
                </observers>
            </sales_order_grid_collection_load_before>
            <core_block_abstract_to_html_before>
                <observers>
                    <signifyd_connect>
                        <model>signifyd_connect/observer</model>
                        <method>coreBlockAbstractToHtmlBefore</method>
                    </signifyd_connect>
                </observers>
            </core_block_abstract_to_html_before>
            <!-- Fulfilment events -->
            <sales_order_shipment_track_save_commit_after>
                <observers>
                    <signifyd_connect>
                        <model>signifyd_connect/observer</model>
                        <method>salesOrderShipmentTrackSaveCommitAfter</method>
                    </signifyd_connect>
                </observers>
            </sales_order_shipment_track_save_commit_after>
        </events>
    </adminhtml>
    <default>
        <signifyd_connect>
            <settings>
                <enabled>0</enabled>
                <!--
                The device fingerprint enable configuration must be kept only at the default and database with no UI
                option to change it at the admin (MAG1-55)
                -->
                <enable_device_fingerprint>1</enable_device_fingerprint>

                <restrict_states_default>pending_payment,payment_review,canceled,closed,complete</restrict_states_default>
                <restrict_states_create>holded,pending_payment,payment_review,canceled,closed,complete</restrict_states_create>
                <restrict_payment_methods>checkmo,cashondelivery,banktransfer,purchaseorder</restrict_payment_methods>
            </settings>
            <advanced>
                <accepted_from_guaranty>3</accepted_from_guaranty>
                <declined_from_guaranty>3</declined_from_guaranty>
            </advanced>
            <log>
                <all>1</all>
            </log>
        </signifyd_connect>
    </default>
</config>
